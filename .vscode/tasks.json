{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active C file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "${env:PATH};C:\\MinGW64\\bin"
                }
            },
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build", "isDefault": "false" }
        },
        {
            "label": "build active C++ file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "${env:PATH};C:\\MinGW64\\bin"
                }
            },
            "problemMatcher": ["$gcc"],
            "group": { "kind": "build", "isDefault": "true" }
        }
    ]
}